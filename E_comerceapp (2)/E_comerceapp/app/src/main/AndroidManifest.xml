        </activity>
        <activity android:name=".CategoryAccessoriesActivity" />
        <activity android:name=".CategoryHouseholdActivity" />
        <activity android:name=".CategoryCrockeryActivity" />
        <activity android:name=".CategoryWearsActivity" />
